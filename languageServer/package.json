    "node": "*"
  },
  "peerDependencies": {
    "dvc": ">=0.0.1",
    "typescript": "*"
  },
  "dependencies": {
    "jsonc-parser": "3.2.0",
    "jsonpath-plus": "7.2.0",
    "lodash": "4.17.21",
