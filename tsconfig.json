{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6", "DOM"],
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "downlevelIteration": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "dvc/common": ["extension/src/common"],
      "dvc/experiments-contract": [
        "extension/src/webviews/experiments/contract"
      ]
    }
  },
  "include": ["*/src/**/*"]
}
