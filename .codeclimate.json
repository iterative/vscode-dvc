{
  "version": "2",
  "exclude_patterns": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/constants.ts",
    "**/contract.ts",
    "demo/**",
    "extension/src/test/**",
    "languageServer/src/test/**",
    "webview/src/shared/components/icons/**"
  ],
  "checks": {
    "file-lines": {
      "config": { "threshold": 300 }
    },
    "method-count": { "config": { "threshold": 30 } },
    "method-lines": {
      "config": {
        "threshold": 40
      }
    }
  }
}
