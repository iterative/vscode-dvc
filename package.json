{
  "private": true,
  "workspaces": [
    "./extension",
    "./webview"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,jsx,tsx,md,json,yml,yaml}'",
    "lint": "eslint --cache --fix '**/*.{js,ts,jsx,tsx}'",
    "test": "yarn workspaces run test",
    "build": "yarn build-ui && yarn build-extension",
    "build-ui": "yarn workspace dvc-vscode-webview build",
    "extension-dev-server": "yarn workspace dvc-integration dev",
    "webview-dev-server": "yarn workspace dvc-vscode-webview dev",
    "dev-server": "run-p extension-dev-server webview-dev-server",
    "dev-ui": "HOT_RELOAD=true USE_DEV_UI=true code --extensionDevelopmentPath $PWD/extension demo --disable-extensions",
    "build-extension": "yarn workspace dvc-integration build",
    "postinstall": "husky install",
    "storybook": "yarn workspace dvc-vscode-webview storybook",
    "build-storybook": "yarn workspace dvc-vscode-webview build-storybook",
    "chromatic": "yarn workspace dvc-vscode-webview chromatic",
    "ci:setup:install-dvc-master": "pip install git+https://github.com/iterative/dvc",
    "ci:setup:venv": "./virtualenv-install.sh",
    "ci:setup:build-tests": "yarn workspace dvc-integration tsc -p './'",
    "ci:run:prettier": "prettier -c '**/*.{md,json}'",
    "ci:run:test": "yarn test",
    "ci:run:eslint": "eslint --cache '**/*.{js,ts,tsx}'"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.2",
    "prettier": "^1.19.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{md,json,yml,yaml,js,ts,tsx}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
