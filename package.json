{
  "private": true,
  "workspaces": [
    "./extension",
    "./webview"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,jsx,tsx,md,json,yml,yaml}'",
    "lint:prettier": "prettier -c '**/*.{md,json}'",
    "lint:eslint": "eslint --cache --fix '**/*.{js,ts,jsx,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "lint": "run-p 'lint:*'",
    "test-build-extension": "yarn workspace dvc run test-vscode-build",
    "test-vscode-build": "run-p build-ui  test-build-extension",
    "test-vscode-run": "yarn workspace dvc run test-vscode-run",
    "test:vscode": "run-s test-vscode-build test-vscode-run",
    "test:jest": "yarn workspaces run test",
    "test": "run-p test:*",
    "cover:test:dvc": "yarn workspace dvc run cover:test",
    "cover:test:dvc-vscode-webview": "yarn workspace dvc-vscode-webview run test",
    "cover:mv:dvc": "mv ./extension/coverage/coverage-final.json ./coverage/combined/dvc-coverage-final.json",
    "cover:mv:dvc-vscode-webview": "mv ./webview/coverage/coverage-final.json ./coverage/combined/dvc-vscode-webview-coverage-final.json",
    "cover:merge:dvc": "yarn workspace dvc run cover:merge",
    "cover:merge": "nyc merge ./coverage/combined coverage/coverage-final.json",
    "cover:report": "nyc report --reporter=lcov --reporter=text --temp-dir=./coverage",
    "cover:clean": "rm -rf ./coverage/combined && rm -rf ./extension/coverage rm -rf ./webview/coverage",
    "cover": "yarn test-vscode-build && run-s cover:test:* && mkdir -p ./coverage/combined && yarn run cover:merge:dvc && run-p cover:mv:* && yarn run cover:merge && yarn run cover:report && yarn run cover:clean",
    "build": "run-s build-ui build-extension",
    "build-ui": "yarn workspace dvc-vscode-webview build",
    "build-extension": "yarn workspace dvc build",
    "extension-dev-server": "yarn workspace dvc dev",
    "webview-dev-server": "yarn workspace dvc-vscode-webview dev",
    "dev-server": "run-p extension-dev-server webview-dev-server",
    "dev-ui": "HOT_RELOAD=true USE_DEV_UI=true code --extensionDevelopmentPath $PWD/extension demo",
    "postinstall": "husky install",
    "storybook": "yarn workspace dvc-vscode-webview storybook",
    "build-storybook": "yarn workspace dvc-vscode-webview build-storybook",
    "chromatic": "yarn workspace dvc-vscode-webview chromatic",
    "setup:venv": "sh ./virtualenv-install.sh"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-sonarjs": "^0.7.0",
    "husky": "^5.0.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pinst": "^2.1.2",
    "prettier": "^1.19.1",
    "prettier-config-standard": "^4.0.0",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "vscode-uri": "^3.0.2"
  }
}
