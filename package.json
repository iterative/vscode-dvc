{
  "private": true,
  "workspaces": [
    "./extension",
    "./webview"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,ts,jsx,tsx,md,json}'",
    "lint": "eslint --cache --fix '**/*.{js,ts,jsx,tsx}'",
    "build": "yarn build-ui && yarn build-extension",
    "build-ui": "yarn workspace dvc-vscode-webview build",
    "extension-dev-server": "yarn workspace dvc-integration dev",
    "webview-dev-server": "yarn workspace dvc-vscode-webview dev",
    "dev-server": "run-p extension-dev-server webview-dev-server",
    "dev-ui": "HOT_RELOAD=true USE_DEV_UI=true code --extensionDevelopmentPath $PWD/extension demo/example-get-started --disable-extensions",
    "build-extension": "yarn workspace dvc-integration build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^5.0.6",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.1",
    "prettier": "^1.19.1"
  },
  "lint-staged": {
    "*.{md,json}": "prettier --write",
    "*.{js,ts,tsx}": "eslint --fix"
  }
}
