{
  "private": true,
  "workspaces": [
    "./extension",
    "./webview"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,json,jsx,md,scss,ts,tsx,yaml,yml}'",
    "lint:prettier": "prettier -c '**/*.{js,json,jsx,md,scss,ts,tsx,yaml,yml}'",
    "lint:eslint": "eslint --cache '**/*.{js,ts,jsx,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "lint": "run-p 'lint:*'",
    "test-build-extension": "yarn workspace dvc run test-vscode-build",
    "test-vscode-build": "run-p build-ui  test-build-extension",
    "test-vscode-run": "yarn workspace dvc run test-vscode-run",
    "test:vscode": "run-s test-vscode-build test-vscode-run",
    "test:jest": "yarn workspaces run test",
    "test": "run-p test:*",
    "cover:clean": "rm -rf ./coverage/combined && rm -rf ./extension/coverage rm -rf ./webview/coverage",
    "cover:integration": "yarn run build-ui && node ./scripts/coverIntegrationTests.js",
    "cover:merge:dvc-vscode-webview": "nyc merge ./webview/coverage ./coverage/combined/dvc-vscode-webview-coverage-final.json",
    "cover:merge:integration": "nyc merge ./extension/coverage/integration coverage/combined/integration-coverage-final.json",
    "cover:merge:unit": "nyc merge ./extension/coverage/unit coverage/unit-coverage-final.json",
    "cover:merge": "nyc merge ./coverage/combined coverage/coverage-final.json",
    "cover:mkdir": "mkdir -p ./coverage/combined",
    "cover:report:integration": "nyc report --reporter=lcov --reporter=text --temp-dir=./extension/coverage/integration",
    "cover:report": "nyc report --reporter=lcov --reporter=text --reporter=text-summary --temp-dir=./coverage --lines=95 --check-coverage",
    "cover:unit": "yarn workspaces run cover",
    "cover": "run-s cover:unit cover:integration cover:report:integration cover:mkdir && yarn run-p cover:merge:* && yarn run-s cover:merge cover:report cover:clean",
    "build": "run-s build-ui build-extension",
    "build-ui": "yarn workspace dvc-vscode-webview build",
    "build-extension": "yarn workspace dvc build",
    "extension-dev-server": "yarn workspace dvc dev",
    "install-frozen-lockfile": "./scripts/install-frozen-lockfile.sh",
    "webview-dev-server": "yarn workspace dvc-vscode-webview dev",
    "dev-server": "run-p extension-dev-server webview-dev-server",
    "postinstall": "husky install",
    "storybook": "yarn workspace dvc-vscode-webview storybook",
    "build-storybook": "yarn workspace dvc-vscode-webview build-storybook",
    "chromatic": "yarn workspace dvc-vscode-webview chromatic",
    "setup:venv": "ts-node ./scripts/virtualenv-install.ts",
    "scheduled:cli:test": "ts-node ./extension/src/test/cli/index.ts",
    "create-svgs": "ts-node ./scripts/create-svgs.ts",
    "svgr": "yarn workspace dvc-vscode-webview svgr"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "@vscode/codicons": "^0.0.29",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-prettier-standard": "^4.0.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-check-file": "^1.1.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-testing-library": "^5.1.0",
    "eslint-plugin-unicorn": "^41.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.6.1",
    "prettier-config-standard": "^5.0.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "resolutions": {
    "minimist": "1.2.6",
    "node-forge": "1.3.0",
    "prismjs": "1.27.0"
  }
}
