        "foreach": {
          "title": "Foreach",
          "description": "Iterable to loop through in foreach. Can be a parametrized string, list or a dictionary.\n\nThe stages will be generated by iterating through this data, by substituting\ndata in the `do` block.",
          "anyOf": [
            {
              "type": "string",
              "pattern": "^\\${.*?}$"
            },
            {
              "type": "array",
              "items": {}
            },
            {
              "type": "object"
            }
          ]
        },
        "do": {
          "title": "Do",
