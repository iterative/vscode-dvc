{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__mocks__/", "src/test/e2e/wdio.conf.ts"]
}
