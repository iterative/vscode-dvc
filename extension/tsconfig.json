{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2022",
    "outDir": "dist",
    "lib": ["es2022"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["**/__mocks__/", "src/test/e2e/**"]
}
