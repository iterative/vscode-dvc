{
  "name": "dvc-integration",
  "private": true,
  "displayName": "DVC",
  "description": "DVC VSCode extension",
  "publisher": "iterative",
  "icon": "docs/dvc.png",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "readme": "./README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/iterative/vscode-dvc"
  },
  "bugs": "https://github.com/iterative/vscode-dvc",
  "homepage": "https://github.com/iterative/vscode-dvc/README.md",
  "keywords": [
    "iterative",
    "data",
    "version",
    "control",
    "dvc"
  ],
  "categories": [
    "Data Science",
    "Visualization"
  ],
  "galleryBanner": {
    "color": "#333",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.52.0",
    "node": ">=10.2.0"
  },
  "activationEvents": [
    "*",
    "onWebviewPanel:dvc-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "DVC: Push",
        "command": "dvc-integration.push"
      },
      {
        "title": "DVC: Show Webview",
        "command": "dvc-integration.showWebview"
      },
      {
        "title": "DVC: Run Experiment",
        "command": "dvc-integration.runExperiment"
      },
      {
        "title": "DVC: Select DVC path...",
        "command": "dvc.selectDvcPath"
      }
    ],
    "configuration": {
      "title": "DVC",
      "properties": {
        "dvc.dvcPath": {
          "type": "string",
          "description": "Path to DVC.",
          "default": "dvc",
          "scope": "resource"
        }
      }
    },
    "menus": {
      "scm/resourceState/context": [
        {
          "command": "dvc-integration.push",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "command": "dvc-integration.runExperiment",
          "when": "resourceFilename == params.yaml || resourceFilename == dvc.yaml"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dvc-container",
          "title": "DVC",
          "icon": "media/dvc-monochrome.svg"
        }
      ]
    },
    "views": {
      "dvc-container": [
        {
          "id": "dvc-tree",
          "name": "Commands"
        }
      ]
    }
  },
  "scripts": {
    "dev": "shx rm -rf dist && tsc -watch -p ./",
    "build": "yarn build-webpack && yarn package",
    "build-webpack": "webpack --mode production",
    "package": "vsce package --yarn",
    "pub": "vsce publish --yarn --baseImagesUrl https://github.com/iterative/vscode-dvc/raw/master/extension --baseContentUrl https://github.com/iterative/vscode-dvc/raw/master/extension",
    "format": "prettier --write '**/*.{js,ts,md,json}'",
    "lint": "eslint --cache --fix '**/*.{js,ts}'",
    "test": "node ./dist/test/runTest.js",
    "vscode:prepublish": ""
  },
  "dependencies": {
    "@hediet/node-reload": "^0.7.3",
    "@hediet/std": "^0.6.0",
    "bufferutil": "^4.0.3",
    "dayjs": "^1.10.1",
    "glob": "^7.1.6",
    "mobx": "^6.0.4",
    "utf-8-validate": "^5.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/jest": "^26.0.19",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.19",
    "@types/sinon-chai": "^3.2.5",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.11.1",
    "@typescript-eslint/parser": "^4.11.1",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "sinon": "^9.2.3",
    "sinon-chai": "^3.5.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.13",
    "tslint": "^6.1.3",
    "typescript": "^4.1.3",
    "vsce": "^1.83.0",
    "vscode-test": "^1.4.1",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11"
  }
}
