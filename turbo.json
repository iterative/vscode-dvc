{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dvc#build": {
      "dependsOn": ["dvc-vscode-webview#build"],
      "outputs": ["dist/**", "./dvc.vsix"]
    },
    "package": {
      "dependsOn": ["dvc#build"]
    },
    "build-storybook": {
      "dependsOn": ["^build-storybook", "dvc-fixtures#build"],
      "outputs": ["storybook-static/**"]
    },
    "test": {
      "dependsOn": ["^test", "dvc-fixtures#build"],
      "outputs": ["coverage/jest/**"]
    },
    "cover-vscode-run": {
      "dependsOn": ["test", "dvc-vscode-webview#build"],
      "outputs": ["coverage/integration/**"]
    },
    "test-vscode-build": {
      "outputs": ["dist/**"]
    },
    "test-vscode-run": {
      "dependsOn": [
        "dvc#test-vscode-build",
        "dvc-vscode-webview#build",
        "dvc-fixtures#build"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
