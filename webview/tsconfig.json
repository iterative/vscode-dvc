{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "rootDir": "./src",
    "resolveJsonModule": true,
    "newLine": "LF",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": ["src/**/*"]
}
