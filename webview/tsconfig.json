{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "newLine": "LF",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "dvc/common": ["../extension/src/common"],
      "dvc/experiments-contract": [
        "../extension/src/webviews/experiments/contract"
      ]
    }
  },
  "include": ["src/**/*", "webpack.config.ts"]
}
