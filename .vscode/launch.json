{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Hot Reload + Dev UI for dev-server)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "true",
        "PYTHONPATH": ".env/bin/python3",
        "USE_DEV_UI": "true"
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      "windows": {
        "env": {
          "HOT_RELOAD": "true",
          "PYTHONPATH": ".env\\Scripts\\python.exe",
          "USE_DEV_UI": "true"
        }
      }
    },
    {
      "name": "Run All Extensions (Hot Reload + Dev UI for dev-server)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/extension"],
      "env": {
        "HOT_RELOAD": "true",
        "PYTHONPATH": ".env/bin/python3",
        "USE_DEV_UI": "true"
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      "windows": {
        "env": {
          "HOT_RELOAD": "true",
          "PYTHONPATH": ".env\\Scripts\\python.exe",
          "USE_DEV_UI": "true"
        }
      }
    }
  ]
}
