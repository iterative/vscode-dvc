{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension (Hot Reload + Dev UI)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/demo/example-get-started",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "true",
        "USE_DEV_UI": "true"
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      "preLaunchTask": "npm: dev - extension"
    },
    {
      "name": "Run Extension (Hot Reload)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/demo/example-get-started",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "true",
        "USE_DEV_UI": ""
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      "preLaunchTask": "npm: dev - extension"
    },
    {
      "name": "Run Extension (Dev UI)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/demo/example-get-started",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "",
        "USE_DEV_UI": "true"
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"],
      "preLaunchTask": "npm: dev - extension"
    },
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "${workspaceFolder}/demo/example-get-started",
        "--disable-extensions"
      ],
      "env": {
        "HOT_RELOAD": "",
        "USE_DEV_UI": ""
      },
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"]
    },
    {
      "name": "Run Integration Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "${workspaceFolder}/demo/example-get-started",
        "--extensionDevelopmentPath=${workspaceFolder}/extension",
        "--extensionTestsPath=${workspaceFolder}/extension/dist/test/suite/index",
        "--disable-extensions"
      ],
      "outFiles": ["${workspaceFolder}/extension/dist/**/*.js"]
    }
  ]
}
